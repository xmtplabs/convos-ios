{
  "permissions": {
    "allow": [
      "Bash(swiftlint:*)",
      "Bash(swiftformat:*)",
      "Bash(xcodebuild:*)",
      "Bash(swift build:*)",
      "Bash(swift test:*)",
      "Bash(make:*)",
      "Bash(xcrun simctl:*)",
      "Bash(open -a Simulator:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git merge:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(pgrep:*)",
      "Bash(jq:*)",
      "Bash(tr:*)",
      "Bash(xcpretty:*)",
      "Bash(gt:*)",
      "Read",
      "Read(.claude/.simulator_id)",
      "Edit",
      "Write",
      "Write(.claude/.simulator_id)",
      "Glob",
      "Grep",
      "mcp__XcodeBuildMCP__*",
      "mcp__ios-simulator__*",
      "mcp__xmtp-docs__*",
      "mcp__graphite__*",
      "mcp__notion__*",
      "mcp__linear__*"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "env": {
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-init.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "axiom@axiom-marketplace": true
  }
}
