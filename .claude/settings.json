{
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.claude/hooks/session-init.sh\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(swiftlint:*)",
      "Bash(swiftformat:*)",
      "Bash(xcodebuild:*)",
      "Bash(swift build:*)",
      "Bash(swift test:*)",
      "Bash(make:*)",
      "Bash(xcrun simctl:*)",
      "Bash(open -a Simulator:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "mcp__XcodeBuildMCP__*",
      "mcp__ios-simulator__*",
      "mcp__xmtp-docs__*",
      "mcp__notion__*"
    ],
    "deny": []
  }
}
